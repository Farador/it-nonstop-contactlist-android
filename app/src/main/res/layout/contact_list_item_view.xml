<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:layout_marginLeft="@dimen/activity_vertical_margin"
    android:layout_marginRight="@dimen/activity_vertical_margin"

    android:layout_marginTop="@dimen/card_padding_top"
    android:layout_marginBottom="@dimen/card_padding_top">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:paddingLeft="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_vertical_margin"

        android:paddingTop="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/card_padding_top">

        <ImageView
            android:id="@+id/img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            tools:background="#ff00ff"
            android:scaleType="centerCrop"
            />

        <TextView
            android:id="@+id/name"
            style="@style/Name"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/img"
            android:singleLine="true"
            tools:text="Conatc name"/>

        <GridLayout
            android:id="@+id/data_grid"
            android:layout_below="@id/img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/card_padding_top"
            android:columnCount="2">

            <TextView
                android:id="@+id/phone_label"
                style="@style/Label"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="Phone:"/>

            <TextView
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"/>

            <TextView
                android:id="@+id/mobile_label"
                style="@style/Label"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="Mobile:"/>

            <TextView
                android:id="@+id/mobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"/>

            <TextView
                android:id="@+id/work_label"
                style="@style/Label"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="Work:"/>

            <TextView
                android:id="@+id/work"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"/>

            <TextView
                android:id="@+id/email_label"
                style="@style/Label"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="Email:"/>

            <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"/>

            <TextView
                android:id="@+id/address_label"
                style="@style/Label"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="Address:"/>

            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"/>
        </GridLayout>

        <LinearLayout
            android:paddingTop="@dimen/card_padding_top"
            android:layout_below="@id/data_grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_edit"
                style="@style/TextButton"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn_edit"
                android:background="@null"
                android:textColor="@color/card_bnt_text_color"/>

            <TextView
                android:id="@+id/btn_delete"
                style="@style/TextButton"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"

                android:text="@string/btn_delete"
                android:background="@null"
                android:textColor="@color/card_bnt_text_color"/>
        </LinearLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>